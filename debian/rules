#!/usr/bin/make -f

PKG=$(shell dh_listpackages)
VERSION=40480

%:
	dh $@

override_dh_auto_install:
	dh_auto_install
	mkdir -p ./debian/$(PKG)/usr/lib/$(PKG)-$(VERSION)
	for FILE in ./debian/$(PKG)/usr/bin/*; do \
	  mv $$FILE ./debian/$(PKG)/usr/lib/$(PKG)-$(VERSION)/`basename $$FILE`; \
	done
	for FILE in genome-wrappers/*; do \
	  cp $$FILE ./debian/$(PKG)/usr/bin/`basename $$FILE`-$(VERSION); \
	  sed -i 's/VERSION/$(VERSION)/g' ./debian/$(PKG)/usr/bin/`basename $$FILE`-$(VERSION); \
	done
